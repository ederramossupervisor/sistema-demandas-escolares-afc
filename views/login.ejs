<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <!-- PWA Configuration -->
    <link rel="manifest" href="manifest.json">
    <link rel="icon" type="image/png" sizes="192x192" href="images/icon-192x192.png">
    <link rel="icon" type="image/png" sizes="512x512" href="images/icon-512x512.png">
    <link rel="apple-touch-icon" href="images/icon-192x192.png">
    <meta name="theme-color" content="#0d6efd">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

    <!-- Registrar Service Worker -->
    <script>
    if ('serviceWorker' in navigator) {
    window.addEventListener('load', () => {
        navigator.serviceWorker.register('sw.js')
        .then(registration => {
            console.log('‚úÖ Service Worker registrado:', registration.scope);
        })
        .catch(error => {
            console.log('‚ùå Falha ao registrar Service Worker:', error);
        });
    });
    }
    </script>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        
        .login-container {
            background: white;
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            width: 100%;
            max-width: 450px;
        }
        
        .logo {
            text-align: center;
            margin-bottom: 30px;
        }
        
        .logo h1 {
            color: #333;
            font-size: 28px;
            margin-bottom: 10px;
        }
        
        .logo p {
            color: #666;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="logo">
            <h1>üè´ Sistema Escolar</h1>
            <p>Gest√£o de Demandas Educacionais</p>
        </div>
        
        <% if (message) { %>
            <div class="alert alert-info">
                <%= message %>
            </div>
        <% } %>
        
        <form id="loginForm">
            <div class="mb-3">
                <label for="email" class="form-label">Email Institucional</label>
                <input type="email" class="form-control" id="email" placeholder="seu.email@escola.gov.br" required>
            </div>
            
            <div class="mb-3">
                <label for="password" class="form-label">Senha</label>
                <input type="password" class="form-control" id="password" placeholder="Digite sua senha" required>
            </div>
            
            <button type="submit" class="btn btn-primary w-100" id="submitBtn">
                Entrar no Sistema
            </button>
        </form>
        
        <div class="mt-4 text-center">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">üëë Primeiro Acesso</h6>
                    <p class="mb-1"><strong>Email:</strong> supervisor@escola.gov.br</p>
                    <p class="mb-0"><strong>Senha:</strong> SenhaAdmin123</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        const loginForm = document.getElementById('loginForm');
        const submitBtn = document.getElementById('submitBtn');
        
        loginForm.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            
            submitBtn.disabled = true;
            submitBtn.textContent = 'Autenticando...';
            
            try {
                const response = await fetch('/api/auth/login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email, password })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Redirecionar para dashboard
                    window.location.href = '/dashboard';
                } else {
                    alert('Erro: ' + data.message);
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Entrar no Sistema';
                }
                
            } catch (error) {
                console.error('Erro:', error);
                alert('Erro de conex√£o com o servidor');
                submitBtn.disabled = false;
                submitBtn.textContent = 'Entrar no Sistema';
            }
        });
        
        // Preencher automaticamente para teste
        document.getElementById('email').value = 'supervisor@escola.gov.br';
        document.getElementById('password').value = 'SenhaAdmin123';
    </script>
    <!-- Bot√£o para instalar PWA -->
<div id="installContainer" style="position: fixed; bottom: 20px; right: 20px; z-index: 1000; display: none;">
    <div class="alert alert-success shadow" style="margin: 0;">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-mobile-alt me-2"></i>
                <strong>Instalar App</strong>
                <div class="small">Acesse rapidamente no celular</div>
            </div>
            <div>
                <button class="btn btn-sm btn-success me-2" onclick="installPWA()">
                    <i class="fas fa-download"></i> Instalar
                </button>
                <button class="btn btn-sm btn-outline-secondary" onclick="hideInstallPrompt()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
    </div>
</div>

<script>
// Controle do PWA
let deferredPrompt;

// Quando o navegador oferecer instala√ß√£o
window.addEventListener('beforeinstallprompt', (e) => {
    e.preventDefault();
    deferredPrompt = e;
    
    // Mostrar bot√£o ap√≥s 3 segundos
    setTimeout(() => {
        if (deferredPrompt) {
            document.getElementById('installContainer').style.display = 'block';
        }
    }, 3000);
});

// Fun√ß√£o para instalar
function installPWA() {
    if (deferredPrompt) {
        deferredPrompt.prompt();
        deferredPrompt.userChoice.then((choiceResult) => {
            if (choiceResult.outcome === 'accepted') {
                console.log('‚úÖ Usu√°rio aceitou instala√ß√£o');
                // Esconder bot√£o
                document.getElementById('installContainer').style.display = 'none';
            }
            deferredPrompt = null;
        });
    }
}

// Fun√ß√£o para esconder
function hideInstallPrompt() {
    document.getElementById('installContainer').style.display = 'none';
}

// Verificar se j√° est√° instalado como PWA
function isRunningAsPWA() {
    return window.matchMedia('(display-mode: standalone)').matches || 
           window.navigator.standalone;
}

// Se j√° for PWA, esconder bot√£o
if (isRunningAsPWA()) {
    console.log('üì± Rodando como PWA instalado');
    document.getElementById('installContainer').style.display = 'none';
}

// Registrar Service Worker (j√° est√° no head, mas por seguran√ßa)
if ('serviceWorker' in navigator) {
    navigator.serviceWorker.register('/sw.js')
        .then(registration => {
            console.log('‚úÖ Service Worker registrado:', registration.scope);
        })
        .catch(error => {
            console.log('‚ùå Erro Service Worker:', error);
        });
}
</script>
</body>
</html>