    }
    
    /* INDICADOR DE PASSOS - MUDAR PARA VERTICAL OU SCROLL */
    .step-indicator {
        flex-wrap: wrap;
        justify-content: center;
        gap: 10px;
        margin-bottom: 1.5rem;
    }
    
    .step-indicator::before {
        display: none; /* Remove linha em mobile */
    }
    
    .step {
        width: 70px;
        flex-shrink: 0;
    }
    
    .step-circle {
        width: 35px;
        height: 35px;
