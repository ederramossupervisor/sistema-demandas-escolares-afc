    <%- include('partials/scripts') %>

    <!-- Scripts espec√≠ficos da p√°gina de cadastro -->
    <script>
    let passoAtual = 1;
    
    function avancarParaPasso(passo) {
        // Validar passo atual antes de avan√ßar
        if (passoAtual === 1 && !validarPasso1()) return;
        if (passoAtual === 2 && !validarPasso2()) return;
        if (passoAtual === 3 && !validarPasso3()) return;
        
        // Esconder passo atual
        document.getElementById(`section${passoAtual}`).classList.remove('active');
        document.getElementById(`step${passoAtual}`).classList.remove('active');
        
        // Atualizar passo anterior para "completado"
        document.getElementById(`step${passoAtual}`).classList.add('completed');
        
        // Mostrar novo passo
        passoAtual = passo;
        document.getElementById(`section${passo}`).classList.add('active');
        document.getElementById(`step${passo}`).classList.add('active');
        
        // Atualizar resumo se for o passo 4
        if (passo === 4) {
            atualizarResumo();
        }
    }
    
    function voltarParaPasso(passo) {
        // Esconder passo atual
        document.getElementById(`section${passoAtual}`).classList.remove('active');
        document.getElementById(`step${passoAtual}`).classList.remove('active');
        
        // Remover "completado" do passo atual
        document.getElementById(`step${passoAtual}`).classList.remove('completed');
        
        // Mostrar passo anterior
        passoAtual = passo;
        document.getElementById(`section${passo}`).classList.add('active');
        document.getElementById(`step${passo}`).classList.add('active');
    }
    
    function validarPasso1() {
        const nome = document.querySelector('input[name="nome"]').value;
        const email = document.querySelector('input[name="email"]').value;
        const cpf = document.querySelector('input[name="cpf"]').value;
        const cargo = document.querySelector('input[name="cargo"]').value;
        const lotacao = document.querySelector('select[name="lotacao"]').value;
        
        if (!nome || !email || !cpf || !cargo || !lotacao) {
            alert('Preencha todos os campos obrigat√≥rios do Passo 1!');
            return false;
        }
        
        // Validar email
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(email)) {
            alert('Por favor, insira um email v√°lido!');
            return false;
        }
        
        return true;
    }
    
    function validarPasso2() {
        const username = document.querySelector('input[name="username"]').value;
        const tipo = document.querySelector('select[name="tipo"]').value;
        const senha = document.querySelector('input[name="senha"]').value;
        const confirmarSenha = document.querySelector('#confirmarSenha').value;
        
        if (!username || !tipo || !senha || !confirmarSenha) {
            alert('Preencha todos os campos obrigat√≥rios do Passo 2!');
            return false;
        }
        
        if (senha.length < 8) {
            alert('A senha deve ter pelo menos 8 caracteres!');
            return false;
        }
        
        if (senha !== confirmarSenha) {
            alert('As senhas n√£o coincidem!');
            return false;
        }
        
        return true;
    }
    
    function validarPasso3() {
        const departamento = document.querySelector('select[name="departamento"]').value;
        
        if (!departamento) {
            alert('Selecione um departamento!');
            return false;
        }
        
        return true;
    }
    
    function verificarForcaSenha() {
        const senha = document.querySelector('input[name="senha"]').value;
        const strengthBar = document.getElementById('passwordStrength');
        
        let strength = 0;
        
        // Verificar comprimento
        if (senha.length >= 8) strength++;
        if (senha.length >= 12) strength++;
        
        // Verificar variedade de caracteres
        if (/[a-z]/.test(senha)) strength++;
        if (/[A-Z]/.test(senha)) strength++;
        if (/[0-9]/.test(senha)) strength++;
        if (/[^a-zA-Z0-9]/.test(senha)) strength++;
        
        // Limitar a 4 n√≠veis
        strength = Math.min(strength, 4);
        
        // Atualizar barra
        strengthBar.className = `password-strength strength-${strength}`;
    }
    
    function verificarSenhas() {
        const senha = document.querySelector('input[name="senha"]').value;
        const confirmarSenha = document.querySelector('#confirmarSenha').value;
        const texto = document.getElementById('senhaMatchText');
        
        if (confirmarSenha === '') {
            texto.textContent = '';
            texto.className = 'form-text';
        } else if (senha === confirmarSenha) {
            texto.textContent = '‚úÖ Senhas coincidem';
            texto.className = 'form-text text-success';
        } else {
            texto.textContent = '‚ùå Senhas n√£o coincidem';
            texto.className = 'form-text text-danger';
        }
    }
    
    function atualizarResumo() {
        // Dados pessoais
        document.getElementById('resumoNome').textContent = 
            document.querySelector('input[name="nome"]').value;
        document.getElementById('resumoEmail').textContent = 
            document.querySelector('input[name="email"]').value;
        document.getElementById('resumoCargo').textContent = 
            document.querySelector('input[name="cargo"]').value;
        document.getElementById('resumoLotacao').textContent = 
            document.querySelector('select[name="lotacao"]').value;
        
        // Credenciais
        document.getElementById('resumoUsuario').textContent = 
            document.querySelector('input[name="username"]').value;
        document.getElementById('resumoTipo').textContent = 
            document.querySelector('select[name="tipo"]').value;
        document.getElementById('resumoDept').textContent = 
            document.querySelector('select[name="departamento"]').value;
    }
    
        // Submiss√£o do formul√°rio - VERS√ÉO REAL
    document.getElementById('formCadastroUsuario').addEventListener('submit', async function(e) {
        e.preventDefault();
        
        if (!document.getElementById('confirmacao').checked) {
            mostrarAlerta('Voc√™ precisa confirmar que as informa√ß√µes est√£o corretas!', 'warning');
            return;
        }
        
        try {
            // Mostrar loading
            const btnSubmit = this.querySelector('button[type="submit"]');
            const originalText = btnSubmit.innerHTML;
            btnSubmit.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i> Cadastrando...';
            btnSubmit.disabled = true;
            
            // Coletar dados do formul√°rio
            const formData = new FormData(this);
            const data = {
                nome: formData.get('nome'),
                email: formData.get('email').toLowerCase(),
                senha: formData.get('senha'),
                tipo: formData.get('tipo'),
                cargo: formData.get('cargo'),
                telefone: formData.get('telefone') || '',
                cpf: formData.get('cpf') || '',
                lotacao: formData.get('lotacao'),
                departamento: formData.get('departamento'),
                dataAdmissao: formData.get('dataAdmissao') || new Date().toISOString().split('T')[0],
                enviarEmail: document.getElementById('enviarCredenciais').checked
            };
            
            // Coletar escolas vinculadas
            const escolasCheckboxes = document.querySelectorAll('input[name="escolasVinculadas"]:checked');
            data.escolas = Array.from(escolasCheckboxes).map(cb => cb.value);
            
            // Se n√£o selecionou nenhuma escola, usa a lota√ß√£o
            if (data.escolas.length === 0) {
                data.escolas = [data.lotacao];
            }
            
            console.log('üì§ Enviando dados para cadastro:', data);
            
            // Enviar para a API
            const response = await fetch('/api/emergency-register', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            });
            
            const resultado = await response.json();
            
            if (resultado.success) {
                mostrarAlerta('‚úÖ Usu√°rio cadastrado com sucesso!', 'success');
                
                // Resetar formul√°rio
                this.reset();
                passoAtual = 1;
                
                // Resetar indicadores
                document.querySelectorAll('.step').forEach(step => {
                    step.classList.remove('active', 'completed');
                });
                document.getElementById('step1').classList.add('active');
                
                document.querySelectorAll('.form-section').forEach(section => {
                    section.classList.remove('active');
                });
                document.getElementById('section1').classList.add('active');
                
                // Redefinir checkboxes de escolas
                document.querySelectorAll('input[name="escolasVinculadas"]').forEach((cb, index) => {
                    cb.checked = index < 3;
                });
                
                // Mostrar detalhes do usu√°rio criado
                setTimeout(() => {
                    mostrarModalSucesso(resultado.usuario);
                }, 1000);
                
            } else {
                mostrarAlerta(`‚ùå Erro: ${resultado.message}`, 'error');
            }
            
        } catch (error) {
            console.error('‚ùå Erro no cadastro:', error);
            mostrarAlerta('‚ùå Erro ao conectar com o servidor. Tente novamente.', 'error');
        } finally {
            // Restaurar bot√£o
            const btnSubmit = document.querySelector('#formCadastroUsuario button[type="submit"]');
            btnSubmit.innerHTML = '<i class="fas fa-save me-1"></i> Confirmar Cadastro';
            btnSubmit.disabled = false;
        }
    });
    
    // Fun√ß√£o para mostrar alertas
    function mostrarAlerta(mensagem, tipo = 'info') {
        // Remover alertas anteriores
        const alertasAnteriores = document.querySelectorAll('.alert-flutuante');
        alertasAnteriores.forEach(alerta => alerta.remove());
        
        // Criar novo alerta
        const alerta = document.createElement('div');
        alerta.className = `alert alert-${tipo === 'error' ? 'danger' : tipo} alert-flutuante`;
        alerta.innerHTML = `
            <div class="d-flex align-items-center">
                <i class="fas fa-${tipo === 'success' ? 'check-circle' : tipo === 'warning' ? 'exclamation-triangle' : 'info-circle'} me-2"></i>
                <div>${mensagem}</div>
            </div>
            <button type="button" class="btn-close" onclick="this.parentElement.remove()"></button>
        `;
        
        // Estilos
        Object.assign(alerta.style, {
            position: 'fixed',
            top: '20px',
            right: '20px',
            zIndex: '9999',
            minWidth: '300px',
            maxWidth: '500px',
            boxShadow: '0 4px 12px rgba(0,0,0,0.15)'
        });
        
        document.body.appendChild(alerta);
        
        // Auto-remover ap√≥s 5 segundos (exceto erros)
        if (tipo !== 'error') {
            setTimeout(() => alerta.remove(), 5000);
        }
    }
    
    // Fun√ß√£o para mostrar modal de sucesso
    function mostrarModalSucesso(usuario) {
        const modalHTML = `
            <div class="modal fade" id="modalSucesso" tabindex="-1" aria-labelledby="modalSucessoLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header bg-success text-white">
                            <h5 class="modal-title" id="modalSucessoLabel">
                                <i class="fas fa-check-circle me-2"></i>Usu√°rio Cadastrado
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="text-center mb-4">
                                <div class="avatar-lg bg-success bg-opacity-10 text-success rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 80px; height: 80px;">
                                    <i class="fas fa-user-check fa-2x"></i>
                                </div>
                                <h4 class="text-success">Cadastro realizado com sucesso!</h4>
                            </div>
                            
                            <div class="card mb-3">
                                <div class="card-header bg-light">
                                    <strong>Resumo do Usu√°rio</strong>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p><strong>Nome:</strong><br>${usuario.nome}</p>
                                            <p><strong>Email:</strong><br>${usuario.email}</p>
                                            <p><strong>Tipo:</strong><br>${usuario.tipo}</p>
                                        </div>
                                        <div class="col-md-6">
                                            <p><strong>Departamento:</strong><br>${usuario.departamento}</p>
                                            <p><strong>Escolas:</strong><br>${usuario.escolas.slice(0, 3).join(', ')}${usuario.escolas.length > 3 ? '...' : ''}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>Pr√≥ximos passos:</strong>
                                <ul class="mb-0 mt-2">
                                    <li>As credenciais foram salvas no sistema</li>
                                    <li>O usu√°rio j√° pode fazer login</li>
                                    <li>Verifique o usu√°rio na lista de usu√°rios</li>
                                </ul>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                <i class="fas fa-times me-1"></i> Fechar
                            </button>
                            <a href="/usuarios" class="btn btn-primary">
                                <i class="fas fa-users me-1"></i> Ver Lista de Usu√°rios
                            </a>
                            <button type="button" class="btn btn-success" onclick="window.location.reload()">
                                <i class="fas fa-plus me-1"></i> Novo Cadastro
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        `;
        
        // Adicionar modal ao DOM
        const modalContainer = document.createElement('div');
        modalContainer.innerHTML = modalHTML;
        document.body.appendChild(modalContainer);
        
        // Mostrar modal
        const modal = new bootstrap.Modal(document.getElementById('modalSucesso'));
        modal.show();
        
        // Remover modal do DOM quando fechar
        document.getElementById('modalSucesso').addEventListener('hidden.bs.modal', function () {
            modalContainer.remove();
        });
    }
    
    console.log('‚úÖ P√°gina de cadastro carregada com sucesso!');
    </script>
</body>
