        margin-right: 0;
    }
    
    .col-md-6 {
        width: 100% !important; /* For√ßa 1 coluna */
        margin-bottom: 15px;
    }
    
    /* LABELS MAIORES */
    .form-label {
        font-size: 1rem !important;
        margin-bottom: 8px !important;
    }
    
    /* INPUTS MAIORES PARA DEDO */
    .form-control,
    .form-select {
        padding: 16px 15px !important;
        font-size: 16px !important;
        min-height: 52px;
        border-radius: 10px;
    }
    
    /* CHECKBOXES MAIORES */
    .form-check-input {
        width: 20px !important;
        height: 20px !important;
        margin-top: 0.3em;
    }
    
    .form-check-label {
        font-size: 0.95rem;
        padding-left: 8px;
    }
    
    /* √ÅREAS DE CHECKBOX COM SCROLL */
    div[style*="max-height: 200px"] {
        max-height: 150px !important;
        padding: 15px !important;
    }
    
    /* BOT√ïES DE NAVEGA√á√ÉO */
    .btn {
        padding: 14px 20px !important;
        font-size: 16px !important;
        min-height: 50px;
    }
    
    .btn-primary, .btn-secondary, .btn-success {
        min-width: 120px; /* Largura m√≠nima para toque */
    }
    
    /* TABELA DE RESUMO */
    .table-sm td, .table-sm th {
        padding: 10px 5px;
        font-size: 0.9rem;
    }
    
    /* ALERTAS */
    .alert {
        padding: 15px;
        font-size: 0.95rem;
    }
    
    /* MODAL (se houver) */
    .modal-dialog {
        margin: 10px;
    }
    
    /* REMOVER HOVER EFFECTS EM TOUCH */
    .btn:hover {
        transform: none !important;
    }
}

/* ==================== */
/* CELULARES MUITO PEQUENOS */
