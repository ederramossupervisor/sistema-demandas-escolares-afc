<!DOCTYPE html>
<html lang="pt-br" data-bs-theme="light">
<head>
    <%- include('partials/head', {title: 'Atribuir Escolas - Supervisor'}) %>
    
    <style>
        .escola-card {
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }
        
        .escola-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        
        .escola-card.selected {
            border-color: #0d6efd;
            background-color: rgba(13, 110, 253, 0.05);
        }
        
        .escola-checkbox {
            position: absolute;
            top: 10px;
            right: 10px;
            width: 20px;
            height: 20px;
        }
        
        .counter-badge {
            font-size: 0.8rem;
            padding: 0.25rem 0.5rem;
        }
    </style>
</head>
<body class="bg-light">
    <!-- Navbar -->
    <%- include('partials/navbar') %>
    
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-1 col-md-2 d-none d-md-block bg-dark sidebar">
                <div class="sidebar-sticky">
                    <div class="text-center py-4">
                        <i class="bi bi-buildings text-white fs-1"></i>
                    </div>
                </div>
            </div>
            
            <!-- Conteúdo principal -->
            <main class="col-lg-11 col-md-10 ms-sm-auto px-md-4 py-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">
                        <i class="bi bi-buildings me-2"></i>
                        Atribuir Escolas para Supervisão
                    </h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <span class="badge bg-primary counter-badge" id="contador-escolas">
                            0 escola(s) selecionada(s)
                        </span>
                    </div>
                </div>
                
                <!-- Mensagens -->
                <% if (mensagem) { %>
                <div class="alert alert-<%= mensagem.tipo %> alert-dismissible fade show" role="alert">
                    <i class="bi bi-<%= mensagem.tipo === 'success' ? 'check-circle' : 'exclamation-circle' %> me-2"></i>
                    <%= mensagem.texto %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% } %>
                
                <div class="row">
                    <div class="col-lg-10 mx-auto">
                        <div class="card">
                            <div class="card-header bg-primary text-white">
                                <h4 class="mb-0">
                                    <i class="bi bi-geo-alt me-2"></i>
                                    Selecione as Escolas que Você Irá Supervisionar
                                </h4>
                            </div>
                            <div class="card-body p-4">
                                <!-- Informações -->
                                <div class="alert alert-info mb-4">
                                    <h5 class="alert-heading">
                                        <i class="bi bi-info-circle me-2"></i>
                                        Primeiro Acesso - Supervisor
                                    </h5>
                                    <p class="mb-2">
                                        <strong>Olá, <%= user.nome %>!</strong> Como supervisor da 
                                        <strong>SRE Afonso Cláudio</strong>, você precisa selecionar 
                                        quais escolas irá gerenciar no sistema.
                                    </p>
                                    <p class="mb-0">
                                        <i class="bi bi-lightbulb"></i>
                                        Selecione todas as escolas sob sua responsabilidade. 
                                        Você poderá alterar essa lista posteriormente através do seu perfil.
                                    </p>
                                </div>
                                
                                <!-- Filtro de escolas -->
                                <div class="mb-4">
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-search"></i>
                                        </span>
                                        <input type="text" 
                                               class="form-control" 
                                               id="filtro-escolas" 
                                               placeholder="Buscar escola pelo nome...">
                                        <button class="btn btn-outline-secondary" type="button" id="limpar-filtro">
                                            Limpar
                                        </button>
                                    </div>
                                </div>
                                
                                <!-- Lista de escolas -->
                                <div class="row" id="lista-escolas">
                                    <% escolas.forEach(function(escola) { 
                                        if (escola !== 'SRE Afonso Cláudio') { 
                                    %>
                                    <div class="col-md-6 col-lg-4 mb-3">
                                        <div class="card escola-card h-100" 
                                             data-escola="<%= escola %>"
                                             onclick="toggleEscola(this)">
                                            <div class="card-body">
                                                <input type="checkbox" 
                                                       class="escola-checkbox" 
                                                       name="escolas" 
                                                       value="<%= escola %>"
                                                       id="escola-<%= escola.replace(/\s+/g, '-') %>">
                                                <h5 class="card-title">
                                                    <i class="bi bi-building me-2"></i>
                                                    <%= escola.length > 30 ? escola.substring(0, 30) + '...' : escola %>
                                                </h5>
                                                <p class="card-text text-muted small">
                                                    <i class="bi bi-geo-alt me-1"></i>
                                                    Afonso Cláudio - ES
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <% } }); %>
                                </div>
                                
                                <!-- Aviso de seleção mínima -->
                                <div class="alert alert-warning mt-4 d-none" id="aviso-minimo">
                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                    Selecione pelo menos 1 escola para continuar.
                                </div>
                                
                                <!-- Botões -->
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                                    <button type="button" 
                                            class="btn btn-outline-secondary me-md-2"
                                            onclick="selecionarTodas()">
                                        <i class="bi bi-check-all me-1"></i>
                                        Selecionar Todas
                                    </button>
                                    <button type="button" 
                                            class="btn btn-outline-secondary me-md-2"
                                            onclick="limparSelecao()">
                                        <i class="bi bi-x-circle me-1"></i>
                                        Limpar Seleção
                                    </button>
                                    <button type="button" 
                                            class="btn btn-primary btn-lg"
                                            id="btn-continuar"
                                            onclick="salvarEscolas()"
                                            disabled>
                                        <i class="bi bi-save me-1"></i>
                                        Salvar e Continuar para o Sistema
                                    </button>
                                </div>
                            </div>
                            <div class="card-footer text-center text-muted">
                                <small>
                                    <i class="bi bi-info-circle me-1"></i>
                                    Você poderá alterar estas escolas a qualquer momento em "Meu Perfil" → "Escolas Supervisionadas"
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script>
        let escolasSelecionadas = new Set();
        
        // Inicializar
        document.addEventListener('DOMContentLoaded', function() {
            atualizarContador();
            
            // Filtro de escolas
            document.getElementById('filtro-escolas').addEventListener('input', function(e) {
                const termo = e.target.value.toLowerCase();
                const cards = document.querySelectorAll('.escola-card');
                
                cards.forEach(card => {
                    const escola = card.getAttribute('data-escola').toLowerCase();
                    if (escola.includes(termo)) {
                        card.parentElement.style.display = 'block';
                    } else {
                        card.parentElement.style.display = 'none';
                    }
                });
            });
            
            // Limpar filtro
            document.getElementById('limpar-filtro').addEventListener('click', function() {
                document.getElementById('filtro-escolas').value = '';
                const cards = document.querySelectorAll('.escola-card');
                cards.forEach(card => {
                    card.parentElement.style.display = 'block';
                });
            });
        });
        
        // Toggle seleção de escola
        function toggleEscola(card) {
            const checkbox = card.querySelector('.escola-checkbox');
            const escola = card.getAttribute('data-escola');
            
            checkbox.checked = !checkbox.checked;
            
            if (checkbox.checked) {
                card.classList.add('selected');
                escolasSelecionadas.add(escola);
            } else {
                card.classList.remove('selected');
                escolasSelecionadas.delete(escola);
            }
            
            atualizarContador();
        }
        
        // Atualizar contador
        function atualizarContador() {
            const contador = document.getElementById('contador-escolas');
            const btnContinuar = document.getElementById('btn-continuar');
            const avisoMinimo = document.getElementById('aviso-minimo');
            
            contador.textContent = `${escolasSelecionadas.size} escola(s) selecionada(s)`;
            
            if (escolasSelecionadas.size > 0) {
                contador.className = 'badge bg-success counter-badge';
                btnContinuar.disabled = false;
                avisoMinimo.classList.add('d-none');
            } else {
                contador.className = 'badge bg-warning counter-badge';
                btnContinuar.disabled = true;
                avisoMinimo.classList.remove('d-none');
            }
        }
        
        // Selecionar todas
        function selecionarTodas() {
            const checkboxes = document.querySelectorAll('.escola-checkbox');
            const cards = document.querySelectorAll('.escola-card');
            
            checkboxes.forEach(checkbox => {
                checkbox.checked = true;
            });
            
            cards.forEach(card => {
                card.classList.add('selected');
                escolasSelecionadas.add(card.getAttribute('data-escola'));
            });
            
            atualizarContador();
        }
        
        // Limpar seleção
        function limparSelecao() {
            const checkboxes = document.querySelectorAll('.escola-checkbox');
            const cards = document.querySelectorAll('.escola-card');
            
            checkboxes.forEach(checkbox => {
                checkbox.checked = false;
            });
            
            cards.forEach(card => {
                card.classList.remove('selected');
            });
            
            escolasSelecionadas.clear();
            atualizarContador();
        }
        
        // Salvar escolas
        async function salvarEscolas() {
            if (escolasSelecionadas.size === 0) {
                alert('Selecione pelo menos uma escola!');
                return;
            }
            
            const btnContinuar = document.getElementById('btn-continuar');
            btnContinuar.disabled = true;
            btnContinuar.innerHTML = '<i class="bi bi-hourglass-split me-1"></i> Salvando...';
            
            try {
                const response = await fetch('/api/supervisor/atribuir-escolas', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        escolas: Array.from(escolasSelecionadas)
                    })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Redirecionar para dashboard
                    window.location.href = '/dashboard';
                } else {
                    alert('Erro: ' + data.message);
                    btnContinuar.disabled = false;
                    btnContinuar.innerHTML = '<i class="bi bi-save me-1"></i> Salvar e Continuar para o Sistema';
                }
            } catch (error) {
                console.error('Erro:', error);
                alert('Erro ao salvar. Tente novamente.');
                btnContinuar.disabled = false;
                btnContinuar.innerHTML = '<i class="bi bi-save me-1"></i> Salvar e Continuar para o Sistema';
            }
        }
    </script>
</body>
</html>