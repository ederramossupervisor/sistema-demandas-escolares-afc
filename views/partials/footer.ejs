<!-- views/partials/footer.ejs -->
<footer class="mt-5 py-3 bg-light border-top">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <p class="mb-0 text-muted">
                    <i class="fas fa-school text-primary me-2"></i>
                    <strong>Sistema de Demandas Escolares</strong> © 2024
                </p>
                <small class="text-muted">Versão 1.0.0 - Desenvolvido para Secretaria de Educação</small>
            </div>
            <div class="col-md-6 text-end">
                <small class="text-muted">
                    <i class="fas fa-user me-1"></i> Logado como: <%= user.nome.split(' ')[0] %>
                    | <i class="fas fa-shield-alt me-1"></i> <%= user.tipo %>
                    <% if (totalDemandas !== undefined) { %>
                    | <i class="fas fa-tasks me-1"></i> <%= totalDemandas %> demandas
                    <% } %>
                </small>
            </div>
        </div>
    </div>
</footer>