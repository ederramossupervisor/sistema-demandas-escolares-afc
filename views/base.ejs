<!-- views/base.ejs -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('partials/head') %>
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container-fluid mt-4">
        <div class="row">
            <!-- Sidebar (apenas se não for login) -->
            <% if (!hideSidebar) { %>
                <%- include('partials/sidebar', {
                    currentPage: currentPage,
                    escolas: escolas,
                    user: user
                }) %>
            <% } %>

            <!-- Conteúdo Principal -->
            <div class="<%= hideSidebar ? 'col-12' : 'col-md-9' %>">
                <!-- Cabeçalho da Página -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h1><i class="<%= pageIcon %> me-2"></i> <%= pageTitle %></h1>
                        <p class="text-muted"><%= pageDescription %></p>
                    </div>
                </div>

                <!-- Conteúdo Específico da Página -->
                <%- body %>
            </div>
        </div>
    </div>

    <!-- Rodapé (apenas se não for login) -->
    <% if (!hideSidebar) { %>
        <%- include('partials/footer', {
            user: user,
            totalDemandas: totalDemandas
        }) %>
    <% } %>

    <%- include('partials/pwa-button') %>
    <%- include('partials/scripts') %>
</body>
</html>