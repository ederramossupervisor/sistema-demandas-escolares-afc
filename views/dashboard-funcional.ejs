<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('partials/head') %>
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container-fluid mt-4">
        <div class="row">
            <!-- INCLUI a sidebar -->
            <%- include('partials/sidebar', { 
                currentPage: 'dashboard',
                escolas: escolas,
                user: user 
            }) %>

            <!-- Main Content -->
            <div class="col-md-9">
                <div class="row mb-4">
                    <div class="col-12">
                        <h1><i class="fas fa-tachometer-alt me-2"></i> Dashboard</h1>
                        <p class="text-muted">Bem-vindo, <strong><%= user.nome %></strong>! Aqui está o resumo do sistema.</p>
                    </div>
                </div>

                <!-- Cards de Estatísticas -->
                <div class="row mb-4">
                    <div class="col-md-4 mb-3">
                        <div class="card stat-card bg-primary text-white">
                            <div class="card-body text-center">
                                <i class="fas fa-tasks fa-3x mb-3 opacity-75"></i>
                                <h2 class="display-5 fw-bold"><%= totalDemandas || 0 %></h2>
                                <p class="mb-0 fs-5">Total de Demandas</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4 mb-3">
                        <div class="card stat-card bg-warning text-dark">
                            <div class="card-body text-center">
                                <i class="fas fa-clock fa-3x mb-3 opacity-75"></i>
                                <h2 class="display-5 fw-bold"><%= demandasPendentes || 0 %></h2>
                                <p class="mb-0 fs-5">Pendentes</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4 mb-3">
                        <div class="card stat-card bg-success text-white">
                            <div class="card-body text-center">
                                <i class="fas fa-check-circle fa-3x mb-3 opacity-75"></i>
                                <h2 class="display-5 fw-bold"><%= demandasConcluidas || 0 %></h2>
                                <p class="mb-0 fs-5">Concluídas</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Ações Rápidas -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header bg-white">
                                <h5 class="mb-0"><i class="fas fa-bolt me-2"></i> Ações Rápidas</h5>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-3 mb-3">
                                        <a href="/demandas" class="card action-card text-decoration-none">
                                            <div class="card-body text-center">
                                                <i class="fas fa-plus-circle fa-2x text-primary mb-3"></i>
                                                <h6 class="card-title mb-2">Nova Demanda</h6>
                                                <p class="card-text small text-muted">Criar nova demanda</p>
                                            </div>
                                        </a>
                                    </div>
                                    
                                    <div class="col-md-3 mb-3">
                                        <a href="/demandas" class="card action-card text-decoration-none">
                                            <div class="card-body text-center">
                                                <i class="fas fa-list-check fa-2x text-success mb-3"></i>
                                                <h6 class="card-title mb-2">Ver Todas</h6>
                                                <p class="card-text small text-muted">Listar todas demandas</p>
                                            </div>
                                        </a>
                                    </div>
                                    
                                    <div class="col-md-3 mb-3">
                                        <a href="/cadastro" class="card action-card text-decoration-none">
                                            <div class="card-body text-center">
                                                <i class="fas fa-user-plus fa-2x text-info mb-3"></i>
                                                <h6 class="card-title mb-2">Novo Usuário</h6>
                                                <p class="card-text small text-muted">Cadastrar usuário</p>
                                            </div>
                                        </a>
                                    </div>
                                    
                                    <div class="col-md-3 mb-3">
                                        <div class="card action-card" onclick="location.reload()">
                                            <div class="card-body text-center">
                                                <i class="fas fa-sync-alt fa-2x text-secondary mb-3"></i>
                                                <h6 class="card-title mb-2">Atualizar</h6>
                                                <p class="card-text small text-muted">Atualizar dashboard</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- INCLUI o rodapé -->
    <%- include('partials/footer', { 
        user: user,
        totalDemandas: totalDemandas 
    }) %>

    <%- include('partials/pwa-button') %>
    <%- include('partials/scripts') %>
</body>
</html>