<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('partials/head', {title: 'Login - Sistema de Demandas'}) %>
    
    <!-- CSS adicional específico para login -->
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        
        .login-container {
            animation: fadeIn 0.8s ease-out;
        }
        
        .login-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            padding: 40px;
            width: 100%;
            max-width: 450px;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }
        
        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }
        
        .login-logo {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            color: white;
            font-size: 32px;
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }
        
        .login-title {
            color: #333;
            font-weight: 700;
            margin-bottom: 5px;
        }
        
        .login-subtitle {
            color: #666;
            font-size: 14px;
        }
        
        .form-group {
            margin-bottom: 25px;
        }
        
        .form-label {
            color: #555;
            font-weight: 600;
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .form-control {
            border: 2px solid #e1e5e9;
            border-radius: 10px;
            padding: 12px 15px;
            font-size: 16px;
            transition: all 0.3s ease;
        }
        
        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }
        
        .input-group-text {
            background-color: #f8f9fa;
            border: 2px solid #e1e5e9;
            border-right: none;
            border-radius: 10px 0 0 10px;
        }
        
        .btn-login {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 10px;
            padding: 14px;
            font-size: 16px;
            font-weight: 600;
            width: 100%;
            transition: all 0.3s ease;
            margin-top: 10px;
        }
        
        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
        }
        
        .login-footer {
            text-align: center;
            margin-top: 30px;
            color: #666;
            font-size: 14px;
        }
        
        .login-footer a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
        }
        
        .login-footer a:hover {
            text-decoration: underline;
        }
        
        .alert {
            border-radius: 10px;
            border: none;
            padding: 15px;
            margin-bottom: 20px;
        }
        
        /* Animação de fade-in */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        /* ==================== */
/* RESPONSIVIDADE MOBILE */
/* ==================== */
@media (max-width: 768px) {
    /* Container principal */
    body {
        padding: 15px;
        display: block; /* Muda de flex para block em mobile muito pequeno */
        min-height: 100vh;
    }
    
    .login-container {
        width: 100%;
        max-width: 100%;
        padding: 10px;
    }
    
    /* Card de login */
    .login-card {
        padding: 25px 20px;
        margin: 0;
        border-radius: 15px;
        width: 100%;
        max-width: 100%;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }
    
    /* Cabeçalho */
    .login-header {
        margin-bottom: 25px;
    }
    
    .login-logo {
        width: 70px;
        height: 70px;
        font-size: 28px;
        margin-bottom: 15px;
    }
    
    .login-title {
        font-size: 1.5rem; /* 24px em mobile */
        margin-bottom: 5px;
    }
    
    .login-subtitle {
        font-size: 0.9rem; /* 14px em mobile */
    }
    
    /* FORMULÁRIOS - MELHORIAS PARA DEDO */
    .form-group {
        margin-bottom: 20px;
    }
    
    .form-label {
        font-size: 1rem; /* 16px mínimo para legibilidade */
        margin-bottom: 10px;
    }
    
    /* INPUTS MAIORES PARA DEDO */
    .form-control {
        padding: 16px 15px !important; /* Mais alto para dedo */
        font-size: 16px !important; /* Previne zoom automático do iOS */
        min-height: 52px; /* Altura mínima para toque fácil */
        border-radius: 12px;
    }
    
    /* Input group também maior */
    .input-group-text {
        padding: 16px 15px;
        min-height: 52px;
        font-size: 18px;
    }
    
    /* Labels menores */
    .form-check-label {
        font-size: 0.95rem;
    }
    
    /* BOTÃO GRANDE PARA DEDO */
    .btn-login {
        padding: 18px !important;
        font-size: 17px !important;
        min-height: 56px;
        border-radius: 12px;
        margin-top: 15px;
    }
    
    /* Rodapé ajustado */
    .login-footer {
        margin-top: 25px;
    }
    
    .login-footer p {
        font-size: 0.9rem;
        line-height: 1.5;
    }
    
    /* Credenciais de teste mais legíveis */
    .login-footer strong {
        font-size: 0.95rem;
    }
    
    /* Alerta de mensagem */
    .alert {
        padding: 15px;
        font-size: 0.95rem;
        margin-bottom: 20px;
    }
    
    /* Remove hover effects em touch devices */
    .btn-login:hover {
        transform: none;
    }
}

/* ==================== */
/* CELULARES MUITO PEQUENOS */
/* ==================== */
@media (max-width: 375px) {
    .login-card {
        padding: 20px 15px;
    }
    
    .login-title {
        font-size: 1.3rem;
    }
    
    .form-control {
        padding: 14px 12px !important;
        min-height: 48px;
    }
    
    .input-group-text {
        padding: 14px 12px;
        min-height: 48px;
    }
    
    .btn-login {
        padding: 16px !important;
        min-height: 52px;
    }
    
    /* Ajusta texto das credenciais */
    .login-footer p {
        font-size: 0.85rem;
    }
}

/* ==================== */
/* PREVENÇÃO DE ZOOM NO iOS */
/* ==================== */
/* Garante que inputs não deem zoom automático no iOS */
@media screen and (-webkit-min-device-pixel-ratio: 0) {
    input[type="email"],
    input[type="password"],
    input[type="text"],
    select,
    textarea {
        font-size: 16px !important;
    }
}

/* Previne zoom automático no iOS */
@media screen and (-webkit-min-device-pixel-ratio:0) {
    select,
    textarea,
    input[type="text"],
    input[type="password"],
    input[type="datetime"],
    input[type="datetime-local"],
    input[type="date"],
    input[type="month"],
    input[type="time"],
    input[type="week"],
    input[type="number"],
    input[type="email"],
    input[type="url"],
    input[type="search"],
    input[type="tel"],
    input[type="color"] {
        font-size: 16px !important;
    }
}
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <!-- Cabeçalho do Login -->
            <div class="login-header">
                <div class="login-logo">
                    <i class="bi bi-shield-lock"></i>
                </div>
                <h1 class="login-title">Sistema de Demandas Escolares</h1>
                <p class="login-subtitle">Acesso restrito à equipe autorizada</p>
            </div>
            
            <!-- Mensagem de erro (se houver) -->
            <% if (error) { %>
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <%= error %>
                </div>
            <% } %>
            
            <!-- Mensagem de sucesso (se houver) -->
            <% if (success) { %>
                <div class="alert alert-success" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    <%= success %>
                </div>
            <% } %>
            
            <!-- Formulário de Login -->
            <form action="/login" method="POST">
                <div class="form-group">
                    <label class="form-label" for="email">
                        <i class="bi bi-envelope"></i> E-mail Institucional
                    </label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-person-badge"></i>
                        </span>
                        <input 
                            type="email" 
                            class="form-control" 
                            id="email" 
                            name="email" 
                            placeholder="seu.email@escola.gov.br" 
                            required
                            value="<%= email || 'supervisor@escola.gov.br' %>"
                        >
                    </div>
                    <small class="text-muted">Use seu e-mail institucional</small>
                </div>
                
                <div class="form-group">
                    <label class="form-label" for="password">
                        <i class="bi bi-key"></i> Senha de Acesso
                    </label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-lock"></i>
                        </span>
                        <input 
                            type="password" 
                            class="form-control" 
                            id="password" 
                            name="password" 
                            placeholder="Digite sua senha" 
                            required
                            value="<%= password || 'SenhaAdmin123' %>"
                        >
                    </div>
                    <small class="text-muted">A senha é fornecida pela administração</small>
                </div>
                
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="remember" name="remember">
                    <label class="form-check-label" for="remember">
                        Manter-me conectado
                    </label>
                </div>
                
                <button type="submit" class="btn btn-login">
                    <i class="bi bi-box-arrow-in-right me-2"></i>
                    Entrar no Sistema
                </button>
            </form>
            
            <!-- Rodapé do Login -->
            <div class="login-footer">
                <p>
                    <strong>Credenciais de teste:</strong><br>
                    E-mail: supervisor@escola.gov.br<br>
                    Senha: SenhaAdmin123
                </p>
                
                <!-- NOVO: LINK PARA SOLICITAR CADASTRO -->
                <p class="mt-2">
                    <i class="bi bi-person-plus"></i> 
                    <strong>Novo na equipe?</strong> 
                    <a href="/solicitar-cadastro" class="fw-bold">Solicite seu acesso</a>
                </p>
                
                <p class="mt-3">
                    <i class="bi bi-question-circle"></i>
                    Problemas para acessar? 
                    <a href="mailto:suporte@escola.gov.br">Contate o suporte</a>
                </p>
                
                <!-- ADICIONE TAMBÉM LINK PARA RECUPERAR SENHA -->
                <p class="mt-2">
                    <i class="bi bi-key"></i>
                    <a href="/esqueci-senha" class="text-decoration-none">
                        Esqueceu sua senha?
                    </a>
                </p>
                
                <p class="text-muted small mt-3">
                    <i class="bi bi-shield-check"></i>
                    Sistema seguro · Versão 2.0.0 · 
                    <span id="current-year"><%= new Date().getFullYear() %></span>
                </p>
            </div>
        </div>
    </div>
    
    <!-- Incluir scripts -->
    <%- include('partials/scripts') %>
    
    <!-- Script adicional para login -->
    <script>
        // Efeito de foco no primeiro campo
        document.addEventListener('DOMContentLoaded', function() {
            const emailInput = document.getElementById('email');
            if (emailInput) {
                emailInput.focus();
                
                // Efeito visual ao focar
                emailInput.addEventListener('focus', function() {
                    this.parentElement.style.transform = 'scale(1.02)';
                });
                
                emailInput.addEventListener('blur', function() {
                    this.parentElement.style.transform = 'scale(1)';
                });
            }
            
            // Mostrar/ocultar senha (opcional - podemos adicionar ícone)
            console.log('Login carregado com sucesso!');
            
            // Animação de entrada
            const card = document.querySelector('.login-card');
            card.style.animation = 'fadeIn 0.8s ease-out';
            
            // Verificar se há parâmetros de erro na URL
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('error')) {
                const errorMsg = urlParams.get('error');
                // Poderíamos mostrar uma notificação aqui
                console.log('Erro detectado:', errorMsg);
            }
        });
    </script>
</body>
</html>